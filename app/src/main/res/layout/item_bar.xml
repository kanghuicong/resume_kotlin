<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@+id/line_blew"
        app:layout_constraintEnd_toEndOf="@+id/line_blew"/>

    <TextView
        android:id="@+id/line_blew"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#80BFBFBF"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"/>

    <TextView
        android:id="@+id/line"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@+id/line_blew"
        app:layout_constraintBottom_toBottomOf="@+id/line_blew"
        app:layout_constraintStart_toStartOf="@+id/line_blew"/>

</androidx.constraintlayout.widget.ConstraintLayout>
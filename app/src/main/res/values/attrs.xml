<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="TitleView">
        <attr name="title" format="string" />
        <attr name="title_color" format="color" />
        <attr name="title_right" format="string" />
        <attr name="title_right_color" format="color" />
        <attr name="background_color" format="color" />
        <attr name="background_drawable" format="reference" />
        <attr name="is_input" format="boolean" />
        <attr name="needBack" format="boolean" />
    </declare-styleable>


    <declare-styleable name="ItemView">
        <attr name="item_title" format="string" />
        <attr name="item_img" format="reference" />
    </declare-styleable>

    <declare-styleable name="InfoTitleView">
        <attr name="info_title" format="string" />
    </declare-styleable>

    <declare-styleable name="InputView">
        <attr name="input_title" format="string" />
        <attr name="input_hint" format="string" />
        <attr name="input_subtitle" format="string" />
        <attr name="input_need_arrow" format="boolean" />
        <attr name="is_number" format="boolean" />
        <attr name="is_optional" format="boolean" />
    </declare-styleable>
</resources>